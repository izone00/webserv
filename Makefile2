NAME = webserv

CXX = c++
# CXXFLAGS = -Wall -Wextra -Werror -std=c++98
CCXXFLAGS = -I .

FILE =	main.cpp \
		Config.cpp \
		ConfigParser.cpp \
		DerivTree.cpp \
		LocationConfig.cpp \
		ServerConfig.cpp \
		CgiMethodExecutor.cpp \
		DefaultMethodExecutor.cpp \
		HttpMessage.cpp \
		HttpRequestMessage.cpp \
		HttpResponseBuilder.cpp \
		HttpResponseMessage.cpp \
		ResponseHeaderAdder.cpp \
		ServerErrors.cpp \
		Utils.cpp \
		WebservValues.cpp \
		Client.cpp \
		Server.cpp \
		ServerHandler.cpp \

SRCS = $(addprefix srcs/, $(FILE))
OBJS = $(SRCS:%.cpp=%.o)

all: $(NAME)

.c.o :
		$(CXX) $(CXXFLAGS) -c -o $(<:.cpp=.o) $<

$(NAME): $(OBJS)
		$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
clean:
		rm -f $(OBJS)
fclean: clean
		rm -f $(NAME)
re: fclean all

.PHONY: all clean fclean re .c.o
